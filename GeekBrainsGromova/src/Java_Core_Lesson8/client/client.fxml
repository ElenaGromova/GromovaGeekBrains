<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.112-ea" fx:controller="Java_Core_Lesson8.client.Controller">

    <HBox fx:id="upperPanel">
        <Button onAction="#authView" text="Авторизоваться" />
        <Button onAction="#regView" text="Зарегистрироваться" />
    </HBox>

    <HBox fx:id="AutorizationPanel">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="Пароль" />
        <Button onAction="#tryToAuth" text="Авторизоваться" />
        <Button onAction="#regView" text="Зарегистрироваться" />
    </HBox>

    <HBox fx:id="RegistrationPanel">
        <TextField fx:id="logField" promptText="Логин" HBox.hgrow="ALWAYS" />
        <TextField fx:id="nickField" promptText="Никнейм" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passField" onAction="#tryToReg" promptText="Пароль" />
        <Button onAction="#tryToReg" text="Зарегистрироваться" />
        <Button onAction="#authView" text="Авторизоваться" />
    </HBox>


    <HBox VBox.vgrow="ALWAYS">
        <VBox HBox.hgrow="ALWAYS">
            <TextArea fx:id="chatArea" editable="false" VBox.vgrow="ALWAYS" />
            <HBox fx:id="bottomPanel" managed="false" visible="false">
                <TextField fx:id="msgField" onAction="#sendMsg" promptText="Введите сообщение..." HBox.hgrow="ALWAYS"/>
                <Button onAction="#sendMsg" text="Отправить" />
            </HBox>
        </VBox>
        <ListView fx:id="clientsList" onMouseClicked="#selectClient" prefWidth="200" />
        <ListView fx:id="clientsBlackList" onMouseClicked="#selectClient" prefWidth="200" />
    </HBox>


</VBox>

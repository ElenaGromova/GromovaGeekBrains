<VBox alignment="center" spacing="5.0" stylesheets="style.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="filemanager.Controller">
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <MenuBar onMouseClicked="#fileListClicked">
        <Menu text="File">
            <MenuItem onAction="#Quit" text="Quit" />
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>
<!--    <HBox>-->
<!--        <ComboBox />-->
<!--        <TextField VBox.vgrow="ALWAYS" editable="false"/>-->
<!--        <Button maxWidth="Infinity" text="Up" onAction="#Up" HBox.hgrow="ALWAYS" />-->
<!--    </HBox>-->
<!--    <TableView fx:id="filesTable" VBox.vgrow="ALWAYS"/>-->
    <HBox  spacing="5">
<!--        <Button maxWidth="Infinity" text="View" HBox.hgrow="ALWAYS" />-->
        <Button maxWidth="Infinity" focusTraversable="false" text="Copy" onAction="#copyAction" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" focusTraversable="false" text="Move" onAction="#moveAction" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" focusTraversable="false" text="Delete" onAction="#deleteAction" HBox.hgrow="ALWAYS" />
        <Button maxWidth="Infinity" focusTraversable="false" text="Quit" onAction="#Quit" HBox.hgrow="ALWAYS" />
    </HBox>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>